{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="bg_img">
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
   
    <div class="container p-5">
        <h1 class="text-center">Cr√©ation de compte</h1>
        {{ form_start(registrationForm, { 'attr':{'class': 'm-3'}}) }}
            {{ form_row(registrationForm.email, { 'attr':{'class': 'form-control m-1'}}) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe','attr':{'class': 'form-control m-1'}}) }}

            <button type="submit" class="btn btn-secondary">Inscription</button>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
